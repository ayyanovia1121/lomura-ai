generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["prismaSchemaFolder"]
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id          String   @id @default(uuid())
    clerkUserId String   @unique
    email       String   @unique
    imageUrl    String?
    industry    String?
    createdAt   DateTime
    updatedAt   DateTime
    bio         String?
    experience  Int?
    skills      String[]
}

model IndustryInsights {
    id                String   @id @default(uuid())
    industry          String   @unique
    salaryRange       Json[]
    growthRate        Float
    demandLevel       String
    topSkills         String[]
    marketOutlook     String
    keyTrends         String[]
    recommendedSkills String[]
    lastUpdated       DateTime
    nextUpdate        DateTime
}
